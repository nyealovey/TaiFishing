# Doris 备份脚本环境变量示例（复制为 .env 后修改）

# 必需
DORIS_USER=backup_user               # Doris 备份用户名
DORIS_PASSWORD=Bkup!2025StrongPass   # Doris 备份用户密码

# 通用可选项
DORIS_FE_HOST=127.0.0.1              # FE 主机地址，默认 127.0.0.1
DORIS_FE_QUERY_PORT=9030             # FE 查询端口，默认 9030
DORIS_MYSQL_BIN=/usr/bin/mysql       # MySQL 客户端路径
DORIS_REPO=minio_repo                # 备份仓库名称
DORIS_POLL_INTERVAL=30               # 轮询间隔秒
DORIS_BACKUP_TIMEOUT=14400           # 超时秒数（约 4 小时）
DORIS_DB_INTERVAL=60                 # 库间隔秒数
DORIS_LOG_DIR=/home/doris/backup_logs   # 日志目录
DORIS_ENV_FILE=.env                  # 自定义 env 文件路径

# 测试脚本专用（可选）
DORIS_TEST_DB=ODS_PC_test            # 冒烟脚本目标库
DORIS_TEST_PREFIX=smoke              # 冒烟脚本 Label 前缀
