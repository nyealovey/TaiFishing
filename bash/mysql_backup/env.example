# MySQL 通用备份脚本环境变量示例（复制为 .mysql_backup.env 后修改）
# 变量前缀统一为 MYSQL_BACKUP_*

MYSQL_BACKUP_MODE=mysql8                 # mysql5 或 mysql8，对应 innobackupex / xtrabackup
MYSQL_BACKUP_USER=backup
MYSQL_BACKUP_PASSWORD=Backup!ChangeMe
MYSQL_BACKUP_HOST=127.0.0.1
MYSQL_BACKUP_PORT=3306
MYSQL_BACKUP_CONF_FILE=/etc/my.cnf
MYSQL_BACKUP_TOOL_HOME=/usr             # XtraBackup 安装位置，默认 /usr
# MYSQL_BACKUP_TOOL_BIN=/usr/local/bin  # 如需覆盖完整 bin 目录
MYSQL_BACKUP_TARGET_DIR=/data/mysql_backups
MYSQL_BACKUP_FULL_PREFIX=full
MYSQL_BACKUP_INCREMENT_PREFIX=incr
MYSQL_BACKUP_FULL_WEEKDAY=7             # 周日全量
MYSQL_BACKUP_FORCE_FULL=false
MYSQL_BACKUP_DATA_DIR=/data/mysql_backup_runtime
MYSQL_BACKUP_LOG_DIR=/data/mysql_backup_runtime/log
MYSQL_BACKUP_VAR_DIR=/data/mysql_backup_runtime/var
MYSQL_BACKUP_INDEX_FILE=/data/mysql_backup_runtime/var/mysql_increment.index
MYSQL_BACKUP_ERROR_FILE=/data/mysql_backup_runtime/var/mysql_increment.err
MYSQL_BACKUP_INDEX_BACKUP=true
MYSQL_BACKUP_LOG_RETENTION=30
